@using Allup.Areas.ViewModels
@model List<GetProductAdminVM>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <p>@Html.Raw(TempData["ErrorMessage"])</p>
                <p class="card-description">
                    <a asp-action="create" class="btn btn-success">Create a New Product </a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    NO
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Brand
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/@product.Image">
                                    </td>
                                    <td>
                                        <p>@product.Name</p>
                                    </td>
                                    <td>
                                        <p>$@product.Price</p>
                                    </td>
                                    <td>
                                        <p>@product.CategoryName</p>
                                    </td>
                                    <td>
                                        <p>@product.BrandName</p>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="update" asp-route-id="@product.Id" title="Update"><i class="mdi mdi-spotlight-beam"></i></a>
                                        <a class="btn btn-danger" title="Delete" asp-action="delete" asp-route-id="@product.Id"><i class="mdi mdi-delete-forever"></i></a>
                                        <a class="btn btn-primary" title="Detail" asp-action="detail" asp-route-id="@product.Id"><i class="mdi mdi-eye"></i></a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>